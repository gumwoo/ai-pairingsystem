  <ellipse cx="310" cy="150" rx="15" ry="5" fill="none" stroke="#81D4FA" stroke-width="2" />
  <ellipse cx="310" cy="240" rx="30" ry="10" fill="none" stroke="#81D4FA" stroke-width="2" />
  
  <!-- Lime wedge -->
  <path d="M305,160 L315,160 L310,170 Z" fill="#7CB342" />
  <path d="M310,160 L315,160 L310,170 Z" fill="#C0CA33" />
